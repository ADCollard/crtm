REMOVE = rm -f

DVI_FILE = ${DOC_FILE:.tex=.dvi}
PS_FILE  = ${DOC_FILE:.tex=.ps}
PDF_FILE = ${DOC_FILE:.tex=.pdf}

all: tex

tex: $(DOC_FILE)
	latex $(DOC_FILE)

ps: tex
	dvips -o ${PS_FILE} ${DVI_FILE}

pdf: tex
	dvipdfm $(DVI_FILE)

clean:
	$(REMOVE) *.aux *.dvi *.log *.out

realclean: clean
	$(REMOVE) ${PS_FILE} ${PDF_FILE}
