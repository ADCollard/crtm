# @configure_input@

# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

# Prefix-specific substitution variables
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@

# Mixed package and prefix substitution variables
installdir  = $(prefix)/$(distdir)

# Target specification
all clean crtm:
	cd libsrc && $(MAKE) $@
	cd test && $(MAKE) $@

install uninstall:
	cd libsrc && $(MAKE) $@

realclean:
	cd libsrc && $(MAKE) $@
	cd test && $(MAKE) $@
	-rm Makefile config.log* config.status

check:
	cd test && $(MAKE) $@

dist: $(distdir).tar.gz

distcheck:  $(distdir).tar.gz
	gzip -cd $(distdir).tar.gz | tar xvf -
	cd $(distdir) && ./configure
	cd $(distdir) && $(MAKE) all
	cd $(distdir) && $(MAKE) check
	cd $(distdir) && $(MAKE) DESTDIR=$${PWD}/_inst install
	cd $(distdir) && $(MAKE) DESTDIR=$${PWD}/_inst uninstall
	cd $(distdir) && $(MAKE) clean
	rm -fr $(distdir)
	@echo; \
	echo "*** Package $(distdir).tar.gz is ready for distribution ***"; \
	echo

$(distdir).tar.gz: $(distdir)
	tar chof - $(distdir) --exclude .svn | gzip -9 -c > $@
	rm -rf $(distdir)

$(distdir): FORCE
	mkdir -p $(distdir)
	cp configure.ac $(distdir)
	cp configure $(distdir)
	cp Makefile.in $(distdir)
	cp -rL libsrc $(distdir)/libsrc
	cp -rL test $(distdir)/test

Makefile: Makefile.in config.status
	./config.status $@

config.status: configure
	./config.status --recheck

FORCE:
	-rm $(distdir).tar.gz >/dev/null 2>&1
	-rm -fr $(distdir) >/dev/null 2>&1

.PHONY: FORCE all clean check dist distcheck install uninstall
