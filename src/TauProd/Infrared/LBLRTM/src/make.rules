# --------------------
# Fortran suffix rules
# --------------------

.SUFFIXES:
.SUFFIXES: .f .f90 .o
.f90.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) ${<F}
.f.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) ${<F}



